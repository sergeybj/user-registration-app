<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

   
<tiles-definitions>

	<definition name="baseLayout" template="/pages/layout/common-layout.jsp">
		<put-attribute name="header" value="/pages/layout/header.jsp" />
		<put-attribute name="footer" value="/pages/layout/footer.jsp" />
	</definition>
	
	<definition name="userLogin" extends="baseLayout">
		<put-attribute name="body" value="/pages/loginBody.jsp" />
	</definition>
	

	<definition name="userReg" extends="baseLayout">
		<put-attribute name="body" value="/pages/registerUserBody.jsp" />
	</definition>
	
	<definition name="successReg" extends="baseLayout">
		<put-attribute name="body" value="/pages/successBody.jsp" />
	</definition>
	
	<definition name="failureReg" extends="baseLayout">
		<put-attribute name="body" value="/pages/failureBody.jsp" />
	</definition>

</tiles-definitions>